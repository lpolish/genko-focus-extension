{
  "manifest_version": 3,
  "name": "Productivity Blocker",
  "version": "1.0",
  "description": "Block distracting websites with customizable time limits and messages to boost your productivity.",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "tabs",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Genko Focus Reminder"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}