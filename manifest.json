{
  "manifest_version": 3,
  "name": "Productivity Blocker",
  "version": "1.0",
  "description": "Block distracting websites with customizable time limits and messages to boost your productivity.",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*",
        "*://*.twitter.com/*",
        "*://*.instagram.com/*",
        "*://*.tiktok.com/*",
        "*://*.youtube.com/*",
        "*://*.reddit.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Genko Focus Reminder"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}